@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>

    #wrapper {
        position: relative;
        border: none;
        width: auto;
        height: auto;
    }

    #buttonWrapper {
        position: relative;
        top: 5%;
        width: 100%;
    }

    .scaled {
        transform: scale(1);
        transform-origin: center;
    }
</style>
<div class="text-center">
    <h1 class="display-5">Welcome</h1>
    <h3 class="display-6">Conway's Game of Life</h3>
    <div class="container">
        <div class="col-lg-6 col-xxl-4 my-3 mx-auto">
            <div class="d-grid gap-2">
                <div class="btn-group btn-group-lg">
                    <button type="button" class="btn btn-primary" id="start">Start</button>
                    <button type="button" class="btn btn-primary" id="stop" disabled>Stop</button>
                    <button type="reset" class="btn btn-primary" id="reset">Reset</button>
                    <button type="button" class="btn btn-primary" id="generate">Generate Pattern</button>
                </div>
            </div>
        </div>
        <div id="wrapper" class="scaled">
            <div id="buttonWrapper">
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-outline-primary" id="plus">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-zoom-in" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                            <path d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z" />
                            <path fill-rule="evenodd" d="M6.5 3a.5.5 0 0 1 .5.5V6h2.5a.5.5 0 0 1 0 1H7v2.5a.5.5 0 0 1-1 0V7H3.5a.5.5 0 0 1 0-1H6V3.5a.5.5 0 0 1 .5-.5z" />
                        </svg>
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="minus">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-zoom-out" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                            <path d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z" />
                            <path fill-rule="evenodd" d="M3 6.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                        </svg>
                    </button>
                </div>
            </div>
            <canvas id="myCanvas" width="800" height="600" style="border:1px solid #D2E0FB"></canvas>
        </div>
    </div>
</div>
@section Scripts {

    <script>
    </script>
}
